{
  "name": "cz-conventional-changelog-cmyr",
  "version": "2.0.0",
  "description": "草梅友仁自定义的 commitizen 配置",
  "author": "CaoMeiYouRen",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "commit": "git add . && git cz",
    "release": "semantic-release",
    "lint": "cross-env NODE_ENV=production eslint . --fix --ext .ts,.js",
    "build": "cross-env NODE_ENV=production tsdown",
    "dev": "cross-env NODE_ENV=development tsdown --watch",
    "start": "node ./dist/index",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@types/debug": "^4.1.7",
    "@types/node": "^25.0.3",
    "commitizen": "^4.2.4",
    "commitlint-config-cmyr": "^1.0.0",
    "cross-env": "^10.0.0",
    "debug": "^4.4.3",
    "eslint": "^9.39.1",
    "eslint-config-cmyr": "^2.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.2",
    "semantic-release-cmyr-config": "^1.0.0",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./dist/index.mjs"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "homepage": "https://github.com/CaoMeiYouRen/cz-conventional-changelog-cmyr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/cz-conventional-changelog-cmyr.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/cz-conventional-changelog-cmyr/issues"
  },
  "dependencies": {
    "@commitlint/load": "^20.1.0",
    "@commitlint/types": "^20.0.0",
    "@lint-md/core": "^2.0.0",
    "chalk": "^5.6.2",
    "conventional-commit-types": "^3.0.0",
    "longest": "^2.0.1",
    "word-wrap": "^1.2.5"
  },
  "peerDependencies": {
    "commitizen": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "commitizen": {
      "optional": false
    }
  },
  "pnpm": {
    "overrides": {
      "tmp": "^0.2.4",
      "js-yaml": "^4.1.1",
      "glob": "^11.1.0"
    }
  }
}
