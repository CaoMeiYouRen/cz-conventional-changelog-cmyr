{
  "name": "cz-conventional-changelog-cmyr",
  "version": "1.1.1",
  "description": "草梅友仁自定义的 commitizen 配置",
  "author": "CaoMeiYouRen",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "commit": "git add . && git cz",
    "release": "semantic-release",
    "lint": "cross-env NODE_ENV=production eslint . --fix --ext .ts,.js",
    "build": "cross-env NODE_ENV=production tsdown",
    "dev": "cross-env NODE_ENV=development tsdown --watch",
    "start": "node ./dist/index",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-cmyr-config": "^1.2.3",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "debug": "^4.3.3",
    "eslint": "^9.34.0",
    "eslint-config-cmyr": "2.0.0-beta.15",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.1",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2"
  },
  "config": {
    "commitizen": {
      "path": "./dist/index.js"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "homepage": "https://github.com/CaoMeiYouRen/cz-conventional-changelog-cmyr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/cz-conventional-changelog-cmyr.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/cz-conventional-changelog-cmyr/issues"
  },
  "dependencies": {
    "@lint-md/core": "^2.0.0",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.4",
    "conventional-commit-types": "^3.0.0",
    "lodash.map": "^4.6.0",
    "longest": "^2.0.1",
    "word-wrap": "^1.2.5"
  },
  "optionalDependencies": {
    "@commitlint/load": ">6.1.1"
  }
}
